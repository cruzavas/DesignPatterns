@using DesignPatternsAsp.Models.ViewModels
@model IEnumerable<BeerViewModel>

<div class="row">
	<div class="col-12">
		<a href="~/Beer/Add" class="btn btn-primary">Nueva cerveza</a>
	</div>
</div>

<div class="row">
	<div class="col-12">
		<table class="table">
			<tr>
				<th>Nombre</th>
			</tr>
			@foreach (var beer in Model)
			{
				<tr>
					<td>@beer.Name</td>
				</tr>
			}
		</table>
	</div>
</div>